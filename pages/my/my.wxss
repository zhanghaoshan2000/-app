.avator{
  display: flex;
  width: 100%;
  height: 200rpx;
  line-height: 200rpx;
  padding: 0 50rpx 0 50rpx;
  box-sizing: border-box;
  font-size: 18px;
}
.avator-content{
  display: flex;
  align-items: center;
}
.avator-img{
  width: 50px;
  height: 50px;
  margin-right:20rpx;
}
.line{
  width: 100%;
  height: 10px;
  background-color: #F5F5F9;
  /* background-color: red; */
}
.buy-thing{
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-top: 15px;
}
.thing{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 14px;
}
.iconfont{
  font-size: 25px;
}
.btn{
    text-align: center;
    height: 70px;
    line-height: 70px;
}